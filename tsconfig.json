{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "baseUrl": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noUncheckedIndexedAccess": true,
    "noEmit": false,
    "outDir": "build/",
  },
  "include": ["src"],
}
